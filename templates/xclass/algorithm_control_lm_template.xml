<?xml version="1.0" encoding="UTF-8"?>
<FitControl>
    <!-- settings for fit process -->


    <!-- set number of used algorithms -->
    <NumberOfFitAlgorithms>1</NumberOfFitAlgorithms>


    <algorithm>
        <FitAlgorithm>Levenberg-Marquardt</FitAlgorithm>


        <!-- define method used for Levenberg-Marquardt -->
        <MethodLM>nr</MethodLM>


        <!-- define value of the variation (used for the calculation of the gradient (of chi^2 function)) in percent/100 -->
        <VariationValue>5.e-4</VariationValue>


        <!-- set max. number of iterations -->
        <number_iterations>300</number_iterations>


        <!-- set max. number of processors -->
        <NumberProcessors>16</NumberProcessors>


        <!-- define path and name of host file -->
        <MPIHostFileName> </MPIHostFileName>


        <!-- settings for chi^2 -->
        <limit_of_chi2>1e-7</limit_of_chi2>
        <RenormalizedChi2>yes</RenormalizedChi2>
        <DeterminationChi2>default</DeterminationChi2>
        <SaveChi2>yes</SaveChi2>


        <!-- set plot options -->
        <PlotAxisX>Frequency [MHz]</PlotAxisX>
        <PlotAxisY>T_mb [K]</PlotAxisY>
        <PlotIteration>yes</PlotIteration>
    </algorithm>
</FitControl>
